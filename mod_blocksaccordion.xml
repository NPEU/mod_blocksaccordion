<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">

    <name>MOD_BLOCKSACCORDION</name>
    <author>Andy Kirk</author>
    <authorEmail>andy.kirk@npeu.ox.ac.uk</authorEmail>
    <authorUrl>https://www.npeu.ox.ac.uk</authorUrl>
    <creationDate>February 2026</creationDate>
    <copyright>(C) NPEU 2026</copyright>
    <license>MIT License; see LICENSE.md</license>
    <group>com_blocks</group>

    <!--  The version string is recorded in the components table -->
    <version>1.0.0</version>
    <!-- The description is optional and defaults to the name -->
    <description>MOD_BLOCKSACCORDION_XML_DESCRIPTION</description>

    <updateservers>
        <!-- Note: No spaces or linebreaks allowed between the server tags -->
        <server type="extension" name="NPEU: mod_blocksaccordion Update Site">https://raw.githubusercontent.com/NPEU/mod_blocksaccordion/main/update-manifest.xml</server>
    </updateservers>

    <namespace path="src">NPEU\Module\Blocksaccordion</namespace>

    <files>
        <folder module="mod_blocksaccordion">services</folder>
        <folder>language</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
    </files>

    <config>
        <fields name="params"
            addfieldprefix="NPEU\Module\Blocksaccordion\Site\Field"
        >
            <fieldset name="basic">

               <field
                    name="exclusive"
                    type="radio"
                    label="MOD_BLOCKSACCORDION_EXLCUSIVE_LABEL"
                    description="MOD_BLOCKSACCORDION_EXLCUSIVE_DESC"
                    layout="joomla.form.field.radio.switcher"
                    default="1"
                    filter="integer"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field
                    name="panels"
                    type="subform"
                    label="MOD_BLOCKSACCORDION_PANELS_LABEL"
                    description="MOD_BLOCKSACCORDION_PANELS_DESC"
                    multiple="true"
                    min="1"
                    max="100"
                    parentclass="stack form-switch"
                >
                    <form>
                        <field
                            name="panel_title"
                            type="text"
                            label="MOD_BLOCKSACCORDION__PANEL_TITLE_LABEL"
                            description="MOD_BLOCKSACCORDION__PANEL_TITLE_DESC"
                            default=""
                            required="true"
                            filter="\Joomla\CMS\Component\ComponentHelper::filterText"
                        />
                        <field
                            name="panel_content"
                            type="editor"
                            label="MOD_BLOCKSACCORDION__PANEL_CONTENT_LABEL"
                            description="MOD_BLOCKSACCORDION__PANEL_CONTENT_DESC"
                            default=""
                            required="true"
                            buttons="true"
                            filter="\Joomla\CMS\Component\ComponentHelper::filterText"
                        />
                    </form>
                </field>
            </fieldset>
        </fields>
    </config>

</extension>